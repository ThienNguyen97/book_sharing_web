<% provide(:title, @user.name) %>
<!-- Cover Header Start -->
  <div class="cover--header pt--80 text-center" data-bg-img="img/cover-header-img/bg-02.jpg" data-overlay="0.6" data-overlay-color="white">
      <div class="container">
          <div class="cover--avatar" data-overlay="0.3" data-overlay-color="primary">
              <%= gravatar_for @user %>
          </div>
          <div class="cover--user-name">
            <h2 class="h3 fw--600"><%= @user.name %></h2>
          </div>

          <div class="cover--user-desc fw--400 fs--18 fstyle--i text-darkest">
            <p><%= t "contract" %>: <%= @user.email %></p>
            <p>Have a nice day!</p>
          </div>
          <div class="cover--user-name">
            <%= render "users/follow_form" if user_signed_in? %>
          </div>
      </div>
  </div>
  <!-- Cover Header End -->

  <!-- Active -->
<section class="page--wrapper pt--80 pb--20">
  <div class="container">
    <div class="row">
      <!-- Main Content Start -->
      <div class="main--content col-md-10 pb--60" data-trigger="stickyScroll">
        <div class="main--content-inner drop--shadow">
          <!-- Content Nav Start -->
          <div class="content--nav pb--30">
              <ul class="nav ff--primary fs--14 fw--500 bg-lighter">
                <li>
                  <a>
                    <%= link_to t("home.trangchu"), user_path %>
                  </a>
                </li>
                <li class="active">
                  <a>
                  <%= link_to t("profile"), profile_path %>
                  </a>
                </li>
                <li>
                  <a>
                  <%= link_to t("following"), following_path %>
                  <%= @user.following.count %>
                  </a>
                </li>
                <li>
                  <a>
                  <%= link_to t("followers"), followers_path %>
                  <%= @user.followers.count %>
                  </a>
                </li>
              </ul>
          </div>
          <!-- Content Nav End -->

          <!-- Profile Details Start -->
            <div class="profile--details fs--14">
                <!-- Profile Item Start -->
                <div class="profile--item">
                    <div class="profile--heading">
                        <h3 class="h4 fw--700">
                            <span class="mr--4"><%= t "AboutMe" %></span>
                            <i class="ml--10 text-primary fa fa-caret-right"></i>
                        </h3>
                    </div>

                    <div class="profile--info">
                        <table class="table">
                            <tr>
                                <th class="fw--700 text-darkest"><%= t "name" %></th>
                                <td><a class="btn-link"><%= @user.name %></a></td>
                            </tr>
                            <tr>
                                <th class="fw--700 text-darkest"><%= t "email" %></th>
                                <td><%= @user.email %></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- Profile Item End -->

                <!-- Profile Item Show other user Start -->
                <div class="profile--item">
                    <div class="profile--heading">
                        <h3 class="h4 fw--700">
                            <span class="mr--4"><%= t "contract" %></span>
                            <i class="ml--10 text-primary fa fa-caret-right"></i>
                        </h3>
                    </div>

                    <div class="profile--info">
                        <table class="table">
                            <tr>
                                <th class="fw--700 text-darkest"><%= t "name" %></th>
                                <td><a> <%= @user.name %></a></td>
                            </tr>
                            <tr>
                                <th class="fw--700 text-darkest"><%= t "email" %></th>
                                <td><a><%= @user.email %></a></td>
                            </tr>
                        </table>
                    </div>
                    <% if user_signed_in? && (current_user.id == @user.id) %>
                      <%= link_to t("edit"), edit_user_registration_path(@user), class:"btn btn-success" %>
                    <% end %>
                </div>
                <!-- Profile Item End -->
            </div>
            <!-- Profile Details End -->
        </div>

      </div>
      <!-- Main Content End -->
    </div>
  </div>
</section>
