<%= form_for post do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, t("error")) %> <%= t("post_error") %></h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="text-left"><%= t "form_title" %></h1><br>

  <div class="form-group pmd-textfield">
    <%= form.label :title, class: "control-label" %> <span style="color: red;">*</span><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group pmd-textfield">
    <%= form.label :name_of_document, class: "control-label" %> <span style="color: red;">*</span><br>
    <%= form.text_field :book_name, class: "form-control" %>
  </div>
  <div class="form-group pmd-textfield">
    <%= form.label :subject, class: "control-label" %><br>
    <%= form.text_field :subject, class: "form-control" %>
  </div>
  <div class="form-group pmd-textfield">
    <%= form.label :semester, class: "control-label" %><br>
    <%= form.text_field :semester, class: "form-control" %>
  </div>
  <!-- image -->
  <%= form.fields_for :Post_Images do |p| %>
    <div class="form-group pmd-textfield">
      <%= p.label :post_images, class: "control-label" %><br>
      <%= p.file_field :post_images, multiple: true, name: "post_images[image][]", accept: "image/jpeg,image/gif,image/png", class: "upload-image" %>
    </div>
  <% end %>

  <div class="form-group pmd-textfield">
    <%= form.label :content, class: "control-label" %><br>
    <%= form.text_area :content, class: "ckeditor",placeholder:"Use hashtag ex: #n3, #ITSS..." %>
  </div>

  <div class="text-center">
    <div class="actions", style="margin: 5px 230px 3px 230px;">
      <%= form.submit class:"btn btn-primary"%>
    </div>
    </br>
    <%= link_to t("back"), current_user, class:"btn btn-default" %>
  </div>
<% end %>
